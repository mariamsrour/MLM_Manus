@model IList<ProductTagModel>

@using Nop.Core.Domain.Catalog

@if (Model.Count > 0)
{
    <div class="product-tags-box">
      @*   <div class="title">
            <strong>@T("Products.Tags")</strong>
        </div> *@
        <div class="product-tags-list customTags">
            <ul>
                @for (var i = 0; i < Model.Count; i++)
                {
                    if (Model[i].Name == "Free Shipping")
                    {
                        <li class="tag freeShipping">
                            <img class="freeship" src="images/Frame.png" />
                            <a href="@(Url.RouteUrl<ProductTag>(new { SeName = Model[i].SeName }))" class="producttag">
                                @Model[i].Name
                            </a>
                        </li>
                    }else {
                        <li class="tag discount">
                            <img class="pricetag" src="images/pricetag.svg" />
                            <a href="@(Url.RouteUrl<ProductTag>(new { SeName = Model[i].SeName }))" class="producttag">

                                @Model[i].Name
                            </a>
                        </li>
                    }
                   
                   
                }
            </ul>
        </div>
    </div>
}