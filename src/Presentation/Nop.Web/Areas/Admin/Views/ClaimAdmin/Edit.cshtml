@model ClaimItems

@using Nop.Core.Domain.Catalog

@{
    //page title
    ViewBag.PageTitle = T("Admin.Catalog.Categories.EditCategoryDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Categories");
}

<form asp-controller="ClaimAdmin" asp-action="Edit" method="post" id="category-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            Claim Details - @Model.Title
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">BackToList</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.CategoryDetailsButtons, additionalData = Model })
        </div>
    </div>



    <div asp-validation-summary="All"></div>
    <input asp-for="Id" type="hidden" />

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-12 clearfix">
                        <div class="float-left">
                            @await Component.InvokeAsync(typeof(SettingModeViewComponent), new { modeName = "category-advanced-mode" })
                        </div>
                    </div>
                </div>

                <nop-cards id="category-cards">
                    <nop-card asp-name="category-info" asp-icon="fas fa-info" asp-title="Claim Details" asp-hide-block-attribute-name="" asp-hide="false" asp-advanced="false">

                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Title" />
                                </div>
                                <div class="col-md-9">
                                    <label class="col-form-label">@Model.Title</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Name" />
                                </div>
                                <div class="col-md-9">
                                    <label class="col-form-label">@Model.Name</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Email" />
                                </div>
                                <div class="col-md-9">
                                    <label class="col-form-label">@Model.Email</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.PhoneNumber" />
                                </div>
                                <div class="col-md-9">
                                    <label class="col-form-label">@Model.PhoneNumber</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.AdId" />
                                </div>
                                <div class="col-md-9">
                                    <label class="col-form-label">Ad ID# <a href="@Url.Action("Edit","Product",new {id = Model.AdId})">@Model.AdId</a> </label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.CreatedOnUtc" />
                                </div>
                                <div class="col-md-9">
                                    <label class="col-form-label">@Model.CreatedOnUtc.ToLocalTime().ToShortDateString()</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                 <div class="col-md-3">
                                     <label>Attachements</label>
                                </div>
                                <div class="col-md-9">
                                @foreach(var img in Model.PictureUrls)
                                {
                                    <img src="@img" class="claim-img" />
                                }
                                </div>
                            </div>
                           
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Message" />
                                </div>
                                <div class="col-md-9">
                                    <label class="col-form-label">@Model.Message</label>
                                </div>
                            </div>


                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.AdminNote" />
                                </div>
                                <div class="col-md-9">
                                    <nop-textarea asp-for="@Model.AdminNote" />
                                </div>
                            </div>
                            
                         
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <nop-label asp-for="@Model.Status" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-select asp-for="Status" asp-items="ViewBag.ClaimStatusOptions" />
                                    </div>
                                </div>
                            
                           
                        </div>
                           
                    </nop-card>
               
                @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.CategoryDetailsBlock, additionalData = Model })
            </nop-cards>
        </div>
    </div>
</section>
</form>
