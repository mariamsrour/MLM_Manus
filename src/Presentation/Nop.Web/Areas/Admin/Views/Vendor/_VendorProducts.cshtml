@if(Model != null && Model.Count > 0){

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <table class="table table-bordered table-hover table-striped dataTable no-footer">
                                <thead>
                                    <tr>
                                        <th class="sorting_disabled">Id</th>
                                        <th class="sorting_disabled">Name</th>
                                        <th class="sorting_disabled">Ad Status</th>
                                        <th class="sorting_disabled">Date Created</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a href="@Url.ActionLink("Edit","Product",new {id = item.Id})">
                                                    ID#@item.Id
                                                </a>
                                            </td>
                                            <td>@item.Name</td>
                                            <td>@item.AdStatus.ToString()</td>
                                            <td>@item.CreatedOnUtc.ToLocalTime().ToShortDateString()</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
